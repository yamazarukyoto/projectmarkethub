rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == "yamazarukyoto@gmail.com" ||
        request.auth.token.email == "service@pj-markethub.com"
      );
    }

    // Users collection
    match /users/{userId} {
      allow read: if true; // Public profiles
      allow write: if isOwner(userId);
    }

    // Jobs collection
    match /jobs/{jobId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.clientId == request.auth.uid || 
        request.resource.data.clientId == request.auth.uid ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['proposalCount'])
      );
      allow delete: if isAuthenticated() && resource.data.clientId == request.auth.uid;
    }

    // Proposals collection
    // Note: For list queries, Firestore requires the query to prove it only returns accessible documents.
    // We allow read if user is authenticated and is either the worker, client, or the job owner.
    match /proposals/{proposalId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated();
      allow update: if isAuthenticated() && (resource.data.workerId == request.auth.uid || resource.data.clientId == request.auth.uid);
      allow delete: if isAuthenticated() && resource.data.workerId == request.auth.uid;
    }

    // Contracts collection
    match /contracts/{contractId} {
      allow create: if isAuthenticated(); // Usually created via API, but if client-side creation is used
      allow read: if isAuthenticated() && (isAdmin() || resource.data.workerId == request.auth.uid || resource.data.clientId == request.auth.uid);
      allow update: if isAuthenticated() && (isAdmin() || resource.data.workerId == request.auth.uid || resource.data.clientId == request.auth.uid);
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated(); // System or other users triggering notifications
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.reviewerId == request.auth.uid;
      allow update: if false; // Reviews are immutable
    }

    // Rooms collection (for chat)
    match /rooms/{roomId} {
      // 認証済みユーザーはルーム一覧を取得可能（クライアント側でフィルタリング）
      // 個別のルームは参加者のみアクセス可能
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (resource.data.participants[request.auth.uid] == true);
      
      match /messages/{messageId} {
        allow read: if isAuthenticated() && (get(/databases/$(database)/documents/rooms/$(roomId)).data.participants[request.auth.uid] == true);
        allow create: if isAuthenticated() && (get(/databases/$(database)/documents/rooms/$(roomId)).data.participants[request.auth.uid] == true);
        allow update: if isAuthenticated() && (get(/databases/$(database)/documents/rooms/$(roomId)).data.participants[request.auth.uid] == true);
      }
    }
    
    
    // Legacy Messages collection (if used)
    match /messages/{roomId} {
       allow read, write: if isAuthenticated(); // Fallback if structure is different
    }
  }
}
